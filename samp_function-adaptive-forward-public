#include <a_samp>
// #include <open.mp>

#define function%0(%1) \
	forward %0(%1); public %0(%1) \
	{
#define endfunction \
	}

//
// Example Using
//

public OnPlayerDeath(playerid, killerid, reason[]) {
	SetTimerEx("TestFunction", 6000, false, "d", playerid);
	return 1;
}

function TestFunction(playerid) {
	new string[222];
	format(string, sizeof(string), "%s has Death!", playerid);
	SendClientMessageToAll(-1, string);
	// return
	return 1;
}
endfunction // end
